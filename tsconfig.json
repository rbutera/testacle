{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "out",
    "incremental": true,
    "lib": ["es6", "ES2020.Promise", "es2015.promise"]
  },
  "exclude": ["node_modules", "dist", ".vscode-test"]
}
